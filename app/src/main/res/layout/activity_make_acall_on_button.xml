<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeACallAndSmsOnClick">

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:maxLength="11"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <ImageButton
        android:id="@+id/imageButtonId"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_round"
        android:minHeight="48dp"
        android:src="@drawable/ic_call"
        app:layout_constraintEnd_toEndOf="@+id/editTextId"
        app:layout_constraintStart_toStartOf="@+id/editTextId"
        app:layout_constraintTop_toBottomOf="@+id/editTextId"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editText2Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Add text"
        android:inputType="textAutoCorrect"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonId"
        app:layout_constraintStart_toStartOf="@+id/imageButtonId"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonId" />

    <Button
        android:id="@+id/sendMessageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_for_meessagebutton"

        android:padding="14dp"
        android:text="Send Message"
        app:backgroundTint="@null"
        app:iconTint="#F9F9F9"
        app:layout_constraintEnd_toEndOf="@+id/editText2Id"
        app:layout_constraintStart_toStartOf="@+id/editText2Id"
        app:layout_constraintTop_toBottomOf="@+id/editText3Id" />

    <EditText
        android:id="@+id/editText3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="To"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/editText2Id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText2Id"
        app:layout_constraintTop_toBottomOf="@+id/editText2Id" />
</androidx.constraintlayout.widget.ConstraintLayout>